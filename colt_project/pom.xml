		</dependency>
		<dependency>
			<groupId>com.jfreechartgroup</groupId>
			<artifactId>jfreechart</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.jfreechart-dependency-jcommongroup</groupId>
			<artifactId>jfreechart-dependency</artifactId>
