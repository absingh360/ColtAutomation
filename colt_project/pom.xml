		</dependency>
		<dependency>
			<groupId>com.ExcelReportGeneratorgroup</groupId>
			<artifactId>ExcelReportGenerator</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>project.local</id>
			<name>project</name>
			<url>file:${project.basedir}/lib</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<!-- Surefire plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.20.1</version>
				<!-- <dependencies> <dependency> <groupId>org.apache.maven.surefire</groupId> 
					<artifactId>surefire-testng</artifactId> <version>2.20.1</version> </dependency> 
					</dependencies> -->

				<!-- <executions> <execution> <phase>integration-test</phase> <goals> 
					<goal>test</goal> </goals> -->
				<configuration>
					<inherited>true</inherited>
					<executions>
						<execution>
							<phase>test</phase>
							<goals>
								<goal>test</goal>
							</goals>
						</execution>
					</executions>
					<testFailureIgnore>true</testFailureIgnore>
					<suiteXmlFiles>
						<!-- <file>src/test/resources/suites/SanitySuite.xml</file>
						<file>${test}</file> -->
						<suiteXmlFile>${suiteXmlFile}</suiteXmlFile> 
						<!-- <suiteXmlFile>src/test/resources/suites/SanitySuite.xml</suiteXmlFile> -->
					</suiteXmlFiles>
					<properties>
						<property>
							<name>usedefaultlisteners</name>
							<value>false</value>
						</property>
						<property>
							<name>listener</name>
							<value>org.uncommons.reportng.HTMLReporter</value>
						</property>
						<property>
							<name>outputDir</name>
							<value>target/surefire-reports/html</value>
						</property>
						<workingDirectory>target/surefire-reports/html/</workingDirectory>
						<property>
							<name>reporter</name>
							<value>listenReport.Reporter</value>
						</property>
					</properties>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>